---
import { cn } from '@/utils/cn';

interface Props {
  title: string;
  class?: string;
  contentClass?: string;
}

const { title, class: className, contentClass } = Astro.props;
---

<div class={cn('grid gap-2', className)}>
  <h3 class="text-lg font-bold text-color-text-title sm:text-xl">{title}</h3>
  <div class={contentClass}>
    <slot />
  </div>
</div>
