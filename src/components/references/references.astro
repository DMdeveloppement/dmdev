---
import type { CollectionEntry } from 'astro:content';

import Reference from './reference.astro';

interface Props {
  entries: CollectionEntry<'references'>[];
}

const { entries } = Astro.props;
---

<ul class="space-y-10">
  {
    entries.map((referenceEntry, i, arr) => (
      <>
        <Reference {referenceEntry} />
        {i < arr.length - 1 && <hr class="border-color-separator" />}
      </>
    ))
  }
</ul>
