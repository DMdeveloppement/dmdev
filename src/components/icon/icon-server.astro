---
import { getElementAttributes } from '@/utils/element-attributes';
import { removeTopElement } from '@/utils/remove-top-element';

import type { IconProps } from './icon.types';
import { iconsStore } from './icons-store';

interface Props extends IconProps {
  set: string;
  icon: string;
}

const { set, icon, ...props } = Astro.props;

const svg = await iconsStore.get(set, icon);
---

{
  svg.isFirst ? (
    <svg {...getElementAttributes(svg.element)} {...props}>
      <symbol id={svg.key} set:html={removeTopElement(svg.element)} />
      <use xlink:href={`#${svg.key}`} />
    </svg>
  ) : (
    <svg {...getElementAttributes(svg.element)} {...props}>
      <use xlink:href={`#${svg.key}`} />
    </svg>
  )
}
