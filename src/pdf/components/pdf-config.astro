---
interface Props {
  /** Margin applied to all sides of generated PDF. */
  margin: string;

  /** Margin applied to the top of generated PDF. Overrides `margin` prop if provided. */
  marginTop?: string;

  /** Margin applied to the right of generated PDF. Overrides `margin` prop if provided. */
  marginRight?: string;

  /** Margin applied to the bottom of generated PDF. Overrides `margin` prop if provided. */
  marginBottom?: string;

  /** Margin applied to the left of generated PDF. Overrides `margin` prop if provided. */
  marginLeft?: string;
}

const { margin, marginBottom, marginLeft, marginRight, marginTop } = Astro.props;
---

<meta name="pdf-margin-top" content={marginTop ?? margin} />
<meta name="pdf-margin-right" content={marginRight ?? margin} />
<meta name="pdf-margin-bottom" content={marginBottom ?? margin} />
<meta name="pdf-margin-left" content={marginLeft ?? margin} />
