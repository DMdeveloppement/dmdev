---
import type { CollectionEntry } from 'astro:content';

import SkillBar from './skill-bar.astro';
import SkillTag from './skill-tag.astro';

interface Props {
  withLevel?: boolean;
  entries: CollectionEntry<'skills'>[];
}

const { withLevel, entries } = Astro.props;
---

<ul class="flex flex-wrap gap-3">
  {entries.map((skillEntry) => (withLevel ? <SkillBar {skillEntry} /> : <SkillTag {skillEntry} />))}
</ul>
